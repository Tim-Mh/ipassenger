            }
        }

        @media only screen and (max-width: 360px) {

            .profile-pic {
                width: 100px;
                height: 100px;
                padding-bottom: 40%;
                background-color: #699f47;
                border-radius: 50%;
                margin: 0 auto;
            }
            .box{
                padding: 0 0px 30px 0px;
            }
            input[type=file]::file-selector-button {
                margin-right: 20px;
                border: none;
                background: #699f47;
                padding: 10px 5px;
                position: relative;
                margin-top: 10px;
                left: 20px;
                color: #fff;
                cursor: pointer;
            }
        }

        @media only screen and (max-width: 290px) {
            input[type=file]::file-selector-button {
                margin-right: 20px;
                border: none;
                background: #699f47;
                padding: 10px 2px;
                position: relative;
                margin-top: 10px;
                left: 20px;
                color: #fff;
                cursor: pointer;
            }
        }

        @media only screen and (max-width: 160px) {
            .profile-pic {
                width: 50px;
                height: 50px;
                padding-bottom: 40%;
                background-color: #699f47;
                border-radius: 50%;
                margin: 0 auto;
            }
            input[type=file]::file-selector-button {
                margin-right: 20px;
                border: none;
                background: #699f47;
                padding: 10px 2px;
                position: relative;
                margin-top: 10px;
                left: 20px;
                color: #fff;
                cursor: pointer;
            }
        }

        @media only screen and (max-width: 120px) {
            .profile-pic {
                width: 30px;
                height: 30px;
                padding-bottom: 40%;
                background-color: #699f47;
                border-radius: 50%;
                margin: 0 auto;
            }
            .text{
                text-align: center;
                font-weight: 400;
                font-size: 11px;
            }
            input[type=file]::file-selector-button {
                margin-right: 20px;
                border: none;
                background: #699f47;
                padding: 10px 5px;
                position: relative;
                margin-top: 10px;
                left: 20px;
                color: #fff;
                cursor: pointer;
            }
        }
        @media only screen and (max-width: 70px){
            .profile-pic {
                width: 15px;
                height: 15px;
                padding-bottom: 40%;
                background-color: #699f47;
                border-radius: 50%;
                margin: 0 auto;
            }
            .text{
                text-align: center;
                font-weight: 400;
                font-size: 2px;
            }
            .box-header {
                text-align: left;
                padding-top: 15px;
                padding-left: 3px;
                font-weight: 700;
                border-radius: 30px 30px 0px 0px;
                width: 100%;
                height: 50px;
            }
        }
    </style>
    <div class="container">
        <div class="form">
            <div class="profile-pic"></div>
            <br>
            <div class="text">
                <a href="#"><img src="/images/icons/chats.png" width="20px" class="float-left" height="20px" alt="">Chat</a>
                <hr>
                <a href="/bookings"><img src="/images/icons/dbl1.png" width="20px" class="float-left" height="20px" alt="">Bookings</a>
                <hr>
                <a href="/user/profile"><img src="/images/icons/dbl6.png" width="20px" class="float-left" height="20px" alt="">My Profile</a>
                <hr>
                <a href="/change/password"><img src="/images/icons/db20.png" width="20px" class="float-left" height="20px" alt=""> Change Password</a>
                <hr>
                <a href="/payments"><img src="/images/icons/dbl9.png" width="20px"  class="float-left" height="20px" alt="">Payments</a>
                <hr>
            </div>
        </div>
        <div class="box">
            <div class="box-header">
                <p>Edit My Profile</p>
            </div>
            <br>
            <div class="detail">
                <form class="row g-2">
                    <div class="first col-md-6">
                        <input type="text" class="form-control" id="" placeholder="First Name">
                    </div>
                    <div class="last col-md-6">
                        <input type="text" class="form-control" id="" placeholder="Last Name" />
                    </div>
                    <div class="col-md-12">
                        <input type="tel" class="form-control" id="" placeholder="Phone" />
                    </div>
                    <div class="col-md-12">
                        <textarea class="form-control" id="" rows="3" placeholder="Address:"></textarea>
                    </div>
                    <div class="city col-md-3">
                        <input type="text" class="form-control" id="cscp" placeholder="City" />
                    </div>
                    <div class="state col-md-3">
                        <input type="text" class="form-control" id="cscp" placeholder="State" />
                    </div>
                    <div class="country col-md-3">
                        <input type="text" class="form-control" id="cscp" placeholder="Country" />
                    </div>
                    <div class="postcode col-md-3">
                        <input type="text" class="form-control" id="cscp" placeholder="Postcode" />
                    </div>
                    <div class="file">
                        <input type="file" accept="image/*">
                    </div>
                    <div class="col-12">
                        <br>
                        <button type="button" class="float-end" id="btn">Cancel</button>
                        <div class="col-12" id="bt">
                            <br>
                            <button type="submit" class="" id="button">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}