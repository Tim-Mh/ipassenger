            }
            .country{
                padding-left: 15px;
                padding-right: 15px;
            }
            .postcode{
                padding-left: 15px;
            }
        }

        @media only screen and (max-width: 380px){
            .first{
                padding-right: 15px;
            }
            .last{
                padding-left: 15px;
            }
            .city{
